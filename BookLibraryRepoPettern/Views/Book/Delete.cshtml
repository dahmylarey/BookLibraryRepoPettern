@model BookLibraryRepoPetternCore.Book
@{
    ViewData["Title"] = "Delete Book";
}

<form method="post" action="Delete">
    <div class="card-header bg-danger mt-4">
        <h2 class="text-center text-light">@ViewData["Title"]</h2>
    </div><br />

    <div class="card-body">
        <input type="hidden" for="Id" />
        <div class="form-control mb-2">
            <input asp-for="Title" class="form-control" readonly />
            <label for="Title"></label>
        </div>

        <div class="form-control mb-2">
            <input asp-for="Author" class="form-control" readonly />
            <label for="Author"></label>
        </div>

        <div class="form-control mb-2">
            <input asp-for="Genre" class="form-control" readonly />
            <label for="Genre"></label>
        </div>

        <div class="form-control mb-2">
            <input asp-for="Description" class="form-control" readonly />
            <label for="Description"></label>
        </div>

        <div class="form-control mb-2">
            <input asp-for="PublishDate" class="form-control" readonly />
            <label for="PublishDate"></label>
        </div>

        <div class="col-lg-12 d-grid">
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </div>
</form>