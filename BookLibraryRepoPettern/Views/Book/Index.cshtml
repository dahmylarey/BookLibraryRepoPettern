@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model IEnumerable<BookLibraryRepoPetternCore.Book>
@{
    ViewData["Title"] = "List Of Books";
}
<h3>@ViewData["Title"]</h3>
<hr />

<link rel="preconnect" href="https://fonts.googleapis.com">

<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;300;400;700;900&display=swap" rel="stylesheet">

<link href="css/bootstrap.min.css" rel="stylesheet">
<link href="css/bootstrap-icons.css" rel="stylesheet">

<link rel="stylesheet" href="css/slick.css" />
<link href="css/bootstrap.min.css" rel="stylesheet">


<link href="css/tooplate-little-fashion.css" rel="stylesheet">

<form>
    <button asp-action="Create" asp-controller="Book" class="btn btn-primary mb-3">Create New Book</button>

    <table class="table table-responsive table-bothered table-hover">

        <tr class="table-active">
            <th>
                @Html.DisplayNameFor(Book => Book.Id)
            </th>
            <th>
                @Html.DisplayNameFor(Book => Book.Title)
            </th>

            <th>
                @Html.DisplayNameFor(Book => Book.Author)
            </th>

            <th>
                @Html.DisplayNameFor(Book => Book.Genre)
            </th>

            <th>
                @Html.DisplayNameFor(Book => Book.Description)
            </th>

            <th>
                @Html.DisplayNameFor(Book => Book.PublishDate)
            </th>
            <th>Action</th>
        </tr>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var data in Model)
                {
                    <tr>
                        <td>@data.Id</td>
                        <td>@data.Title</td>
                        <td>@data.Author</td>
                        <td>@data.Genre</td>
                        <td>@data.Description</td>
                        <td>@data.PublishDate</td>
                        <td class="text-center">
                            <div class="btn-group btn-group-sm">
                                <a asp-controller="Book" asp-action="CreateOrEdit" asp-route-id="@data.Id" class="btn btn-success">Edit</a>
                            </div>

                            <div class="btn-group btn-group-sm">
                                <a asp-controller="Book" asp-action="Delete" asp-route-id="@data.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7">
                        <div>
                            No Books Available at the moment
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</form>

<section class="front-product">
    <div class="container-fluid p-0">
        <div class="row align-items-center">

            <div class="col-lg-6 col-12">
                <img src="images/retail-shop-owner-mask-social-distancing-shopping.jpg" class="img-fluid" alt="">
            </div>

            <div class="col-lg-6 col-12">
                <div class="px-5 py-5 py-lg-0">

                    <h2 class="mb-4"><span>Books</span> shop</h2>

                    <p class="lead mb-4">Credits go to Unsplash and FreePik websites for images used in this Little Fashion by Tooplate.</p>

                    <a asp-action="Index" asp-controller="Book" class="custom-link">
                        Explore Books
                        <i class="bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>

        </div>
    </div>
</section>
