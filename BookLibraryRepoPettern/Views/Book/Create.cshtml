@model BookLibraryRepoPetternCore.Book
@{
    ViewData["Title"] =  "Create Book";
}
<form method="post" action="CreateOrEdit">
    <div class="card">
        <div class="card-header align-content-center bg-info">
            <h2 class="text-center">@ViewData["Title"]</h2>
        </div>  
        <div class="form-control mt-3 mb-2">
            <label>Title</label>
            <input asp-for="Title" class="form-control" required>
            <span asp-validation-for="Title"></span>
        </div>

        <div class="form-control mb-2">
            <label>Author</label>
            <input asp-for="Author" class="form-control">
            <span asp-validation-for="Author"></span>
        </div>

        <div class="form-control mb-2">
            <label>Genre</label>
            <input asp-for="Genre" class="form-control">
            <span asp-validation-for="Genre"></span>
        </div>

        <div class="form-control mb-2">
            <label>Description</label>
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description"></span>

        </div>
  
        <div class="col-lg-12 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
 
    </div>
</form>