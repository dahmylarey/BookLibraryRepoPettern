@model BookLibraryRepoPetternCore.Book 
@*IEnumerable<BookLibraryRepoPetternCore.DataModels>*@

@{
    ViewData["Title"] =  "Add New Book";
}
<form method="post" enctype="multipart/form-data" action="CreateOrEdit">
    <div class="card">
         <div class="card-header align-content-center">
            <h2 class="text-center text-secondary mt-4">@ViewData["Title"]</h2>
        </div><br />

        <div class="form-control mt-3 mb-2">
            <label>Title</label>
            <input asp-for="Title" class="form-control" required>
            <span asp-validation-for="Title"></span>
        </div><br />

        <div class="form-control mb-2">
            <label>Author</label>
            <input asp-for="Author" class="form-control">
            <span asp-validation-for="Author"></span>
        </div><br />

        
        <div class="form-control mb-2">
            <label>Genre</label>
            <input asp-for="Genre" class="form-control">
            <span asp-validation-for="Genre"></span>
        </div><br />

        <div class="form-control mb-2">
            <label>CoverPhoto</label>
            
            <div class="form-control">
                <input asp-for="CoverPhoto" class="custom-file-input" id="customFile" />
                <span asp-validation-for="CoverPhoto"></span>
            </div>
            

        </div><br />

        <div class="form-control mb-2">
            <label>Genre</label>
            <input asp-for="Genre" class="form-control">
            <span asp-validation-for="Genre"></span>
        </div><br />
  
        <div class="col-lg-12 d-grid">
            <button type="submit" class="btn btn-secondary">Submit</button>
        </div>
 
    </div>
</form>